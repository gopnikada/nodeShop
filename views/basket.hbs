<div class="container mt-5">
    {{#if orders}}
<ul>
    {{#each orders}}
    <div class="row">
        <div class="col-md-12">

                <li class="d-flex flex-row justify-content-between p-2">
                    <div>
                        <p>{{name}}</p>
                        <p>{{count}}</p>
                        <form action="/basket/{{id}}" method="post">

                            <input type="submit" value="Delete">
                        </form>
                    </div>
                    <img style="height: 30vh; width: auto" src={{image}} alt="">

                </li>

        </div>
    </div>
        <hr>
    {{/each}}
</ul>

    {{else}}
        <p>no items yet ordered</p>
    {{/if}}
    {{#if loggedIn}}
        <form action="/buy" method="post" class="text-center">
            <input type="submit" value="Оформить заказ" class="btn btn-success m-3 p-3">
        </form>
        <form action="/logout" method="post" class="text-center">
            <input type="submit" value="Log out" class="btn btn-danger m-3 p-3">
        </form>
    {{else}}
        <form action="/login" method="get" class="text-center">
            <input type="submit" value="Log in" class="btn btn-success m-3 p-3">
        </form>
    {{/if}}
</div>